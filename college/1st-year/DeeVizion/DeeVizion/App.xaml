<Application
    x:Class="DeeVizion.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DeeVizion"
    xmlns:view="clr-namespace:DeeVizion.MVVM.View"
    xmlns:viewModel="clr-namespace:DeeVizion.MVVM.ViewModel"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml" />
                <ResourceDictionary Source="Theme/Button.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:ConsultViewModel}">
                <view:ConsultView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:AddViewModel}">
                <view:AddView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:DeleteViewModel}">
                <view:DeleteView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:ModifyViewModel}">
                <view:ModifyView />
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
