<UserControl
    x:Class="DeeVizion.MVVM.View.DeleteView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DeeVizion.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="490"
    d:DesignWidth="700"
    mc:Ignorable="d">
    <Grid>
        <DataGrid x:Name="dg" ItemsSource="{Binding dg}" Margin="0,0,0,100" />
        <Label
            Height="30"
            Margin="50,0,0,50"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="Selectionner une disvision puis cliquez sur supprimer" />
        <Button
            x:Name="butSupprimer"
            Width="80"
            Height="30"
            Margin="586,416,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Supprimer" RenderTransformOrigin="0.512,1.55" Click="butSupprimer_Click" />
    </Grid>
</UserControl>
